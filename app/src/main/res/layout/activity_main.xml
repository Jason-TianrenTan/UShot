<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.administrator.ushot.Modules.MainActivity">

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_select_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_choose"
            android:drawableStart="@drawable/ic_image_black_24dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="选一张"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_take_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_take"
            android:drawableStart="@drawable/ic_camera_black_24dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="拍一张"
            android:textColor="#FFFFFF" />
    </LinearLayout>


</RelativeLayout>
